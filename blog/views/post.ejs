<article class="post">
    <header>
        <div class="title">
            <h2><a href="/post/<%= encodeObjectID(post._id) %>/<%= slugify(post.title) %>"></a><%= post.title %></h2>
            <p></p>
        </div>
        <div class="meta">
            <time class="published"><%= moment(post.createdAt).format('LLL') %></time>
            <a class="author" href="/author/<%= encodeObjectID(post.author._id) %>">
                <span class="name"><%= post.author.fullName %></span>
            </a>
        </div>
    </header>
    <a class="image featured" href="/post/<%= encodeObjectID(post._id) %>/<%= slugify(post.title) %>">
        <img src="/images/covers/<%= post.coverPhoto %>" alt="">
    </a>
    <p><%=  post.content %></p>
    <footer>

        <ul class="stats">
            <li><a href="/category/General">General</a></li>
            <li><a class="icon fa-heart" href="/like/<%= encodeObjectID(post._id) %>"><%= post.likes %></a></li>
            <li><a class="icon fa-comment" href="/post/<%= encodeObjectID(post._id) %>#comments"></a></li>
        </ul>
    </footer>
</article>